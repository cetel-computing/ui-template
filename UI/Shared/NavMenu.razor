                            <div class="menu-item-name">
                                Block list
                            </div>
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="users/user-dashboard" Match="NavLinkMatch.All">
                            <div class="nav-icon">
                                <span class="fas fa-users fa-1x fa-fw mr-2"></span>
